!flask/bin/python
from flask import Flask, request
import os

app = Flask(__name__)

@app.route('/')
def api_hello():
    if "action" in request.args:
        action = request.args['action']
        if "start" in action:
            os.system ("service httpd start")
            return "Action is: " + action
        elif "stop" in action:
            os.system ("service httpd stop")
            return "Action is: " + action
        else:
            return "Not a valid action, chose from start/stop"
    else:
	return "API only for action, choices['start', 'stop']"

if __name__ == '__main__':
    app.run(debug=True)